                   OnClick="Apply"
                   Style="margin:10px">Submit</MudButton>
        <MudButton Variant="Variant.Filled"
                   Color="Color.Warning"
                   OnClick="Cancel"
                   Style="margin:10px">Cancel</MudButton>
    </MudCardActions>
</MudCard>
<br />
<MudExpansionPanels Class="mb-3" Style="display:inline-flex; max-width:700px">
    <MudExpansionPanel Text="@($"Show Errors ({errors.Count})")" @onclick="@(() => expanded = expanded == false)" IsExpanded="expanded">
        @foreach (var error in errors)
        {
            <MudText Color="@Color.Error">@error</MudText>
        }
    </MudExpansionPanel>
</MudExpansionPanels>